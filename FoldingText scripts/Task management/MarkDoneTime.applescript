property pblnTimePart : trueproperty pblnSeconds : true-- Stamp the selected FoldingText node with a @done tag including date-time @done(yyyy-mm-dd HH:MM:SS)  on run	tell application "FoldingText"		set lstDocs to documents		if lstDocs ≠ {} then			tell item 1 of lstDocs				update nodes at range (textRange of (read selection)) ¬					with changes {|addTags|:{done:my DateStamp(pblnTimePart)}}			end tell		end if	end tellend runon DateStamp(blnTimePart)	set strDate to "%Y-%m-%d"	if blnTimePart then		set strDate to strDate & space & "%H:%M"		if pblnSeconds then set strDate to strDate & ":%S"	end if	do shell script "date \"+" & strDate & "\""end DateStamp